{
  "name": "chromeextension",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:content": "cross-env NODE_ENV=production ENTRY=contentscript webpack --config webpack.config.js",
    "build:background": "cross-env NODE_ENV=production ENTRY=background webpack --config webpack.config.js",
    "build:popup": "cross-env NODE_ENV=production ENTRY=popup webpack --config webpack.config.js",
    "build": "concurrently \"yarn:build:content\" \"yarn:build:background\" \"yarn:build:popup\"",
    "watch:content": "cross-env NODE_ENV=development ENTRY=contentscript webpack --config webpack.config.js -w",
    "watch:background": "cross-env NODE_ENV=development ENTRY=background webpack --config webpack.config.js -w",
    "watch:popup": "cross-env NODE_ENV=development ENTRY=popup webpack --config webpack.config.js -w",
    "watch": "concurrently \"yarn:watch:content\" \"yarn:watch:background\" \"yarn:watch:popup\"",
    "clean": "rimraf dist && cpy manifest.json dist && cd src/assets && cpy **/* ../../dist/assets --parents",
    "cpmonaco": "cpy ../node_modules/monaco-editor/min/vs/**/* dist/vs --parents",
    "prebuild": "yarn run clean",
    "prewatch": "yarn run clean"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.127",
    "@types/jquery": "^3.5.5",
    "@types/node": "^14.14.12",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.1.0",
    "cpy-cli": "^3.1.1",
    "cross-env": "^6.0.3",
    "css-loader": "^5.0.1",
    "eslint": "7.0.0",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^10.1.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "webpack": "^5.10.1",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@bfc/adaptive-flow": "*",
    "@bfc/adaptive-form": "*",
    "@bfc/extension-client": "*",
    "@bfc/ui-plugin-composer": "*",
    "@emotion/css": "^11.1.3",
    "@fluentui/theme-samples": "^8.0.0-beta.0",
    "debug": "^4.3.1",
    "jquery": "^3.5.1",
    "json-source-map": "^0.6.1",
    "jsonpointer": "^4.1.0",
    "lodash": "^4.17.19",
    "mutation-summary": "^0.1.1",
    "query-string": "^6.13.8",
    "react-dom": "16.13.1",
    "react-split": "^2.0.9",
    "recoil": "^0.0.13"
  }
}
